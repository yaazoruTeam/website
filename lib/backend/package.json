{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "scripts": {
        "test": "jest",
        "build": "tsc && tsc-alias",
        "build-schema": "ts-node -r tsconfig-paths/register ./src/db/buildSchema",
        "migrate:make": "knex migrate:make --knexfile knexfile.js -x ts",
        "migrate:up": "ts-node -r tsconfig-paths/register ./src/db/migrationCli.ts up",
        "migrate:down": "ts-node -r tsconfig-paths/register ./src/db/migrationCli.ts down",
        "migrate:status": "ts-node -r tsconfig-paths/register ./src/db/migrationCli.ts status",
        "migrate:latest": "knex migrate:latest --knexfile knexfile.js --env development",
        "migrate:latest:dev": "knex migrate:latest --knexfile knexfile.js --env development",
        "migrate:latest:prod": "knex migrate:latest --knexfile knexfile.js --env production",
        "migrate:rollback": "knex migrate:rollback --knexfile knexfile.js --env development",
        "migrate:rollback:prod": "knex migrate:rollback --knexfile knexfile.js --env production",
        "migrate:docker": "docker-compose -f docker-compose.dev.yaml exec backend npm run migrate:latest:dev",
        "migrate:docker:prod": "docker-compose -f docker-compose.yaml exec backend npm run migrate:latest:prod",
        "seed:make": "knex seed:make --knexfile knexfile.js -x ts",
        "seed:run:dev": "knex seed:run --knexfile knexfile.js --env development",
        "dev": "ts-node-dev --respawn --transpile-only --prefer-ts-exts -r tsconfig-paths/register src/index.ts",
        "dev:nodemon": "npx nodemon --legacy-watch --exec \"ts-node -r tsconfig-paths/register -r dotenv/config\" src/index.ts",
        "start": "node dist/src/index.js"
    },
    "dependencies": {
        "@google-cloud/speech": "^7.2.0",
        "@types/xlsx": "^0.0.36",
        "axios": "^1.7.9",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "dotenv": "^16.4.7",
        "express": "^4.21.1",
        "ipaddr.js": "^2.2.0",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.1.0",
        "media-typer": "^1.1.0",
        "model": "file:../model",
        "multer": "^2.0.1",
        "nodemon": "^3.1.10",
        "pg": "^8.13.3",
        "pg-hstore": "^2.3.4",
        "safer-buffer": "^2.1.2",
        "sequelize": "^6.37.5",
        "tsconfig-paths": "^4.2.0",
        "winston": "^3.17.0",
        "xlsx": "^0.18.5"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/knex": "^0.16.1",
        "@types/multer": "^1.4.13",
        "@types/node": "^22.17.0",
        "@types/pg": "^8.11.11",
        "@types/sequelize": "^4.28.20",
        "@types/supertest": "^6.0.3",
        "jest": "^29.7.0",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.8.3"
    }
}
