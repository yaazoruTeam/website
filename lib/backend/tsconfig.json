{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/tests/**/*", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
