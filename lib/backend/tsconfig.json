{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"],
       "paths": {
      "@/*": ["*"]   ,
      "@model": ["./model/src", "../model/src"],
      "@model/*": ["./model/src/*", "../model/src/*"],
      "@service/*": ["src/service/*"],
      "@controller/*": ["src/controller/*"],
      "@db/*": ["src/db/*"],
      "@config/*": ["src/config/*"],
      "@routers/*": ["src/routers/*"],
      "@utils/*": ["src/utils/*"],
      "@middleware/*": ["src/middleware/*"],
      "@tranzila/*": ["src/tranzila/*"],
      "@integration/*": ["src/integration/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
