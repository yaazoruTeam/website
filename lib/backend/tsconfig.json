{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
       "paths": {
      "@/*": ["*"]   ,
      "@model": ["model/src"],
      "@model/*": ["model/src/*"],
      "@service/*": ["service/*"],
      "@controller/*": ["controller/*"],
      "@db/*": ["db/*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      
    }
  },
  "include": ["src/**/*", "src/tests/ReadExcelDevicesForDonors.test.ts"],
  "exclude": ["node_modules"]
}
